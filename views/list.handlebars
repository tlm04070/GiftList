<div class="container">
    <ul>
        {{#if gifts}} {{#each gifts}}
        <hr>
        <li>
            <div class="row">
                <div class="col-md-8">
                    <a href="/item/{{this.id}}" data-id="{{this.id}}" class="item-title" target="_blank">
